<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RecyclerViewTitle">
        <item name="android:textColor">@color/dark_pink</item>
        <item name="android:textSize">@dimen/default_name_size</item>
        <item name="android:layout_marginStart">@dimen/largeMargin</item>
        <item name="android:layout_marginTop">@dimen/xdefaultMargin</item>
    </style>

    <style name="RecyclerViewSubtitle">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/default_cpf_size</item>
        <item name="android:layout_marginStart">@dimen/largeMargin</item>
        <item name="android:layout_marginTop">@dimen/xminimumMargin</item>
        <item name="android:layout_marginBottom">@dimen/xdefaultMargin</item>
    </style>

    <style name="ToolbarCoraView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="ToolbarTrackingProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/height_toolbar_tracking</item>
        <item name="android:progressDrawable">@drawable/progress_toolbaritau_tracking</item>
    </style>

    <style name="EditTextCora" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/default_title_new_contact_size</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>

    <style name="ButtomCoraNext">
        <item name="android:drawableEnd">@drawable/ic_arrow_forward_white</item>
        <item name="android:layout_marginStart">@dimen/largeMargin</item>
        <item name="android:layout_marginEnd">@dimen/largeMargin</item>
        <item name="android:layout_marginBottom">@dimen/defaultMargin</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">@dimen/largeMargin</item>
        <item name="android:paddingEnd">@dimen/largeMargin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_14_sp</item>
        <item name="android:text">@string/button_next</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtomCoraNext.Enabled">
        <item name="android:background">@drawable/button_border_enabled</item>
    </style>

    <style name="ButtomCoraNext.Disabled">
        <item name="android:background">@drawable/button_border_disabled</item>
    </style>

    <style name="ButtomCoraSuccess">
        <item name="android:layout_marginStart">@dimen/largeMargin</item>
        <item name="android:layout_marginEnd">@dimen/largeMargin</item>
        <item name="android:layout_marginBottom">@dimen/defaultMargin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16_sp</item>
        <item name="android:text">@string/button_success</item>
    </style>

    <style name="ButtomCoraSuccess.Enabled">
        <item name="android:background">@drawable/button_border_enabled</item>
    </style>

    <style name="ButtomCoraSuccess.Disabled">
        <item name="android:background">@drawable/button_border_disabled</item>
    </style>
</resources>
