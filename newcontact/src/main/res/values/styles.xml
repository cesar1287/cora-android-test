<resources>

    <!-- Base application theme. -->
    <style name="TitleNewContact">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/default_title_new_contact_size</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:layout_marginStart">@dimen/largeMargin</item>
        <item name="android:layout_marginEnd">@dimen/largeMargin</item>
        <item name="android:layout_marginTop">@dimen/xlargeMargin</item>
    </style>

    <style name="SubtitleNewContact">
        <item name="android:textSize">@dimen/default_name_size</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_marginStart">@dimen/largeMargin</item>
        <item name="android:layout_marginEnd">@dimen/largeMargin</item>
        <item name="android:layout_marginTop">@dimen/minimumMargin</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonCoraNext" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:drawableEnd">@drawable/ic_arrow_forward_white</item>
        <item name="android:layout_marginStart">@dimen/largeMargin</item>
        <item name="android:layout_marginEnd">@dimen/largeMargin</item>
        <item name="android:layout_marginBottom">@dimen/defaultMargin</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">@dimen/largeMargin</item>
        <item name="android:paddingEnd">@dimen/largeMargin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_14_sp</item>
        <item name="android:text">@string/button_next</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonCoraNext.Enabled">
        <item name="android:enabled">true</item>
        <item name="android:background">@drawable/button_border_enabled</item>
    </style>

    <style name="ButtonCoraNext.Disabled">
        <item name="android:enabled">false</item>
        <item name="android:background">@drawable/button_border_disabled</item>
    </style>

    <style name="ButtonCoraSuccess" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginStart">@dimen/largeMargin</item>
        <item name="android:layout_marginEnd">@dimen/largeMargin</item>
        <item name="android:layout_marginBottom">@dimen/defaultMargin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16_sp</item>
        <item name="android:text">@string/button_success</item>
    </style>

    <style name="ButtonCoraSuccess.Enabled">
        <item name="android:enabled">true</item>
        <item name="android:background">@drawable/button_border_enabled</item>
    </style>

    <style name="ButtonCoraSuccess.Disabled">
        <item name="android:enabled">false</item>
        <item name="android:background">@drawable/button_border_disabled</item>
    </style>

</resources>
